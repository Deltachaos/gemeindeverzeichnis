RewriteEngine On
RewriteBase /
RewriteRule ^index\.html$ - [L]
RewriteRule ^api/(.*)$ ajax.php [L]

<Files config.ini>
        Order Allow,Deny
        Deny from all
</Files>
<Files db.sql>
        Order Allow,Deny
        Deny from all
</Files>
<Files import.php>
        Order Allow,Deny
        Deny from all
</Files>
<Files data.csv>
        Order Allow,Deny
        Deny from all
</Files>